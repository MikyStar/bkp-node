{
	"version": "1.0.0",
	"license": "MIT",
	"name": "bkp",
	"author": "AUBENAS Mike",
	"main": "dist/index.js",
	"module": "dist/bkp.esm.js",
	"typings": "dist/index.d.ts",
	"scripts": {
		"start": "tsdx watch",

		"test": "tsdx test",
		"lint": "tsdx lint",

		"build": "tsdx build",
		"make-binary": "./scripts/make-binary.sh",
		"prepublishOnly": "npm run make-binary",
		"prepare": "tsdx build",

		"security:audit": "npm audit --production --audit-level=moderate --registry=https://registry.npmjs.org",
		"security:fix": "npm audit fix --production --audit-level=moderate --registry=https://registry.npmjs.org",

		"dependencies:check": "ncu -e 2",
		"dependencies:update": "ncu -u && npm run clear && npm install && npm run security:audit",

		"size": "size-limit",
		"analyze": "size-limit --why",

		"clear": "rm -rf node_modules dist bin"
	},
	"files": [
		"dist",
		"src",
		"bin/cli.js"
	],
	"bin": {
		"bkp": "./bin/cli.js"
	},
	"engines": {
		"node": ">=10"
	},
	"peerDependencies": {},
	"husky": {
		"hooks": {
			"pre-commit": "tsdx lint"
		}
	},
	"prettier": {
		"printWidth": 80,
		"semi": true,
		"singleQuote": true,
		"trailingComma": "es5"
	},
	"size-limit": [
		{
			"path": "dist/bkp.cjs.production.min.js",
			"limit": "10 KB"
		},
		{
			"path": "dist/bkp.esm.js",
			"limit": "10 KB"
		}
	],
	"devDependencies": {
		"@size-limit/preset-small-lib": "^7.0.8",
		"husky": "^8.0.1",
		"size-limit": "^7.0.8",
		"tsdx": "^0.14.1",
		"tslib": "^2.4.0",
		"typescript": "^4.7.4"
	}
}
